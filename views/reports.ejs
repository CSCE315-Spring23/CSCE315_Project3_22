</head>
<body>
  <div class="d-flex justify-content-between align-items-center">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
          <a class="navbar-brand" href="\manager\reports">Reports</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                  <li class="nav-item">
                      <a class="nav-link" href="\manager\menu">Menu</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="\manager\Inventory">Inventory</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="#">Help</a>
                  </li>
              </ul>
          </div>
      </div>
    </nav>
    <img src="/images/smoothie-king-logo.png" style="width:400px; height:70px;" alt= "Smoothie King Logo">
    <div id="google_translate_element"></div>
      <script type="text/javascript">
        function googleTranslateElementInit() {
          new google.translate.TranslateElement({
            pageLanguage: 'en',
            layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
            autoDisplay: false,
            multilanguagePage: true
          }, 'google_translate_element');
        }
      </script>
  </div>
  
  <div>
    <button data-toggle="modal" data-target="#reportModal" class="btn btn-lg btn-primary btn-block" onclick="sells_together_report()">Sells Together Report</button>
    <button data-toggle="modal" data-target="#reportModal" class="btn btn-lg btn-primary btn-block" onclick="restock_report()">Restock Report</button>

    <div class="modal fade" id="reportModal" tabindex="-1" role="dialog" aria-labelledby="reportModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"> 
          <div class="modal-header">
            <h5 class="modal-title" id="reportModalLabel">Report</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="container-fluid" id="modal_table"></div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
      </div>
    </div>
  </div>

  <div>
    <button data-toggle="modal" data-target="#reportModal2" class="btn btn-lg btn-primary btn-block" onclick="sales_report()">Sales Report</button>
    
    <div class="modal fade" id="reportModal2" tabindex="-1" role="dialog" aria-labelledby="reportModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="reportModalLabel">Sales Report</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <div class="modal-body">
                  <form>
                      <div class="form-group">
                          <label for="start_date">Start Date:</label>
                          <input type="date" class="form-control" id="start-date">
                      </div>
                      <div class="form-group">
                          <label for="end_date">End Date:</label>
                          <input type="date" class="form-control" id="end-date">
                      </div>
                      <button id="sort-button" onclick="sortTable()">Sort Sales</button>
                      <div class="container-fluid" id="modal_table2"></div>
                  </form>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
          </div>
      </div>
    </div>
    <script> find_and_set_date()</script>
  </div>

  <!-- Excess Report -->
  <div>
    <button data-toggle="modal" data-target="#reportModal3" class="btn btn-lg btn-primary btn-block" onclick="excess_report()">Excess Report</button>
    
    <div class="modal fade" id="reportModal3" tabindex="-1" role="dialog" aria-labelledby="reportModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="reportModalLabel">Excess Report</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <div class="modal-body">
                  <form>
                      <div class="form-group">
                          <label for="Timestamp">timestamp:</label>
                          <input type="date" class="form-control" id="timestamp">
                      </div>
                      <div class="container-fluid" id="modal_table3"></div>
                  </form>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
          </div>
      </div>
    </div>
    <script> find_and_set_timestamp()</script>
  </div>
<!-- Add the Bootstrap JavaScript files for table functionality -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>

