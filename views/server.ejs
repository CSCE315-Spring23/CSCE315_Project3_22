<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/server.css">
    <link rel="icon" href="../images/favicon.png" type="image/png">
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <script src="/server/server.js"></script>
    <title>Smoothie King</title>
</head>
<body>
    <div class="main-header-container">
        <form action="/logout" method="post">
            <button id="sign-out-button" class="btn btn-lg btn-primary btn-block" name="logout" value="Logout">Logout</button>
        </form>
        <img src="../images/smoothie-king-logo.png" style="width:400px; height:70px;" id="logo">
        <!--SIGN OUT BUTTON-->
        <!--<button id="sign-out-button"    >
            <img src="../images/sign-out-button.png" style="width:70px; height:70px">
        </button>-->
        <!--cart button-->
        <!--menu pop up/drop down (stretch)-->
        
    </div>
    <div id="google_translate_element"></div>
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({
            pageLanguage: 'en',
            layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
            autoDisplay: true,
            multilanguagePage: true
            }, 'google_translate_element');
        }
        googleTranslateElementInit();
    </script>

    <div class="main-grid-container">
        <div class="grid-item sub-heading-container">
            <h1>Order Summary</h1>
        </div>

        <div class="grid-item sub-heading-container">
            <h1>Menu</h1>
        </div>

        <div class="grid-item order-items-container">
            <div class="sub-grid-item order-item-list">
                <!--TABLE/VIEW OF ORDER ITEMS-->
                <!--DELETE ITEM BUTTON-->
                <div id="order-summary"></div> <!-- Add this div for displaying the order summary -->
            </div>
            <div class="sub-grid-item lower-panel">
                <div id="total-label">
                    <h1>Total: $0.00</h1>
                </div>
                <div id="buttons-container">
                    <button>Clear Items</button>
                    <button class = "place-order-button">Pay Now</button>
                </div>
            </div>
        </div>

        <div class="button-container">
            <div class="nb-cat-container" id="category-container">
                <button class="active">Featured</button>
                <button>Feel Energized</button>
                <button>Manage Weight</button>
                <button>Get Fit</button>
                <button>Be Well</button>
                <button>Enjoy a Treat</button>
                <button>Snacks</button>
            </div>
            <!--<div class="nb-filter-container">
                <button>Filter</button>
            </div>-->

            <div class="sub-grid-item menu-item-list" id="menu-container"></div>
        </div>

    <div id="popup-container" style="display:none;">
        <div class="popup-content">
            <div class="popup-right-side">
                <div class="popup-smoothie-name">
                    <h2>Smoothie</h2>
                </div>
                <div class="popup-size-selection">
                    <h3>Select a Size</h3>
                    <form class="size-container">
                        <div>
                            <input type="radio" name="size" value="20">
                            <label>20</label><br>
                        </div>
                        <div>
                            <input type="radio" name="size" value="32">
                            <label>32</label><br>
                        </div>
                        <div>
                            <input type="radio" name="size" value="40">
                            <label>40</label>
                        </div>
                    </form>
                </div>
                <div class="popup-ingredient-selection">
                    <h3>Select Ingredients</h3>
                </div>
                <div class="popup-additives-selection">
                    <h3>Select Additives</h3>
                </div>
                <div class="popup-add-button">
                    <button>Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>